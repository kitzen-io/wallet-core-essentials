{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib/",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
